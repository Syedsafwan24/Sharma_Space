generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
  engineType    = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  password String
  role     String  @default("user")
}

model BlogPost {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  date        DateTime
  tag         String
  image       String
  mainImage   String
  excerpt     String
  authorName  String
  authorImage String
  content     String
}

model Project {
  id               String    @id @default(uuid())
  title            String
  location         String
  category         String
  description      String
  shortDescription String?
  client           String?
  completedDate    DateTime?
  area             String?
  videoUrl         String?
  image            String
  coverImage       String?
  galleryImages    String[]
  featured         Boolean   @default(false)
  services         String[]
  slug             String    @unique
}

model Service {
  id          String @id @default(uuid())
  title       String
  description String
  icon        String
}

model Testimonial {
  id       String @id @default(uuid())
  fullName String
  location String
  rating   Int
  image    String
  text     String
}

model Message {
  id      String   @id @default(uuid())
  name    String
  email   String
  phone   String
  message String
  date    DateTime @default(now())
  read    Boolean  @default(false)
}
